<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sdcliente.Controllers.EditPointController">
    <Label style="-fx-font-size: 24px;" text="Editar Ponto" />
    <TextField fx:id="nomeField" promptText="Nome" style="-fx-prompt-text-fill: gray;" />
   <TextArea fx:id="obsField" prefHeight="200.0" prefWidth="200.0" promptText="Obs" />
   <HBox alignment="CENTER_LEFT">
      <children>
          <Button fx:id="saveBtn" disable="true" onAction="#create" style="-fx-font-size: 16px;" text="Atualizar" />
      </children>
   </HBox>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
